<%= button_to "Back", accounts_path, method: :get %>
<h1>Product list</h1>
<%= button_to "New Product", new_product_path, method: :get %>

<table>
  <thead>
    <tr>
      <th>Product Name</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td>
          <%= product.name %>
        </td>
        <td>
          <%= product.description %>
        </td>
        <td>
          <%= button_to "Edit", edit_product_path(product), method: :get %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
